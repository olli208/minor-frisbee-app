<% include partials/head.ejs %>

<header class="">
  <h1> <%= data.name %> </h1>
  <div class="team-quick-info">
    <div>
      <img src="<%= data.profile_image_50 %>" alt="">
    </div>
    <div>
      <p>
        <%= data.city %>, <%= data.country %>
      </p>
    </div>
    <div>
      <p>
        record: <%= data.wins %>-<%= data.losses %>-<%= data.ties %>
      </p>
    </div>
  </div>
</header>

<section class="team-desc">
  <p>
    <%= data.info %>
  </p>
</section>

<section class="team-games">
  <h2>Games Played</h2>
  <ul class="gameslist">
    <h2>Current Games</h2>
    <% games.forEach(function (obj) { %>
    <li>
      <% if (obj.swiss_round) { %>
      <p>ROUND <%= obj.swiss_round.round_number %></p>
      <% } %>
      <p><%= obj.tournament.name %></p>
      <a href="/update/<%= obj.id %>">
        <div class="team1">
          <h4><span><%= obj.team_1_score %></span></h4>
          <h3><%= obj.team_1.short_name %></h3>
        </div>

        <div class="info">
          <p> <b><%= h.moment(obj.start_time).format('dddd Do') %></b></p>
          <p> <b><%= new Date(obj.start_time).toString().substr(15,6) %></b></p>
          <% if (obj.game_site) { %>
          <p><%= obj.game_site.name %></p>
          <% } %>
        </div>

        <div class="team2">
          <h4><span><%= obj.team_2_score %></span></h4>
          <h3><%= obj.team_2.short_name %></h3>
        </div>
      </a>
    </li>
    <% }) %>
  </ul>
</section>

<% include partials/footer.ejs %>
