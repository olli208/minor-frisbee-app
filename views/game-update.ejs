<% include partials/head.ejs %>

<header class="">
  <div class="background"></div>
  <div class="header-section">
    <!--<button class="nav-btn"><span>menu</span></button>-->
    <button class=""><span><</span></button>
    <h1>update game</h1>
  </div>
</header>

<!--

TODO Set rules for people woh are allowed to update score
-->

<section>
  <form action="/update_score" method="post" class="form-scoreboard">
    <fieldset class="scoreboard">
      <label for="team1_score">
        <%= game.team_1.short_name %>:
        <input type="number" name="team1_score" value="<%= game.team_1_score %>" min="0" max="30" id="score-team1" class="scoreboard-team">
        <input type="button" name="team1" value="+"/>
      </label>

      <label for="team2_score">
        <%= game.team_2.short_name %>:
        <input type="number" name="team2_score" value="<%= game.team_2_score %>" min="0" max="30" id="score-team2" class="scoreboard-team">
        <input type="button" name="team2" value="+"/>
      </label>
    </fieldset>

    <fieldset class="score-info">
      <label for="scorer">
        scorer:
        <input type="text" name="scorer">
      </label>

      <label for="assist">
        assist by:
        <input type="text" name="assist">
      </label>


      <input type="hidden" name="game_id" value="<%= game.id %>">
    </fieldset>

    <fieldset>
      <label for="final-score">
        final score?
        <input type="checkbox">
      </label>

      <input type="submit" value="update score">
    </fieldset>

  </form>
</section>

