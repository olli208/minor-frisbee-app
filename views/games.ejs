<section>
  <button> CREATE NEXT ROUND </button>
  <div>
    <!-- Hier komen de hightlights in-->
  </div>
  <ul class="gameslist">
    <h2>Highlights</h2>
    <li>team awesome vs another awesome team</li>
    <li>wow team vs Hey man</li>
  </ul>

  <div>
    <!-- Hier koment de games in-->
  </div>
  <ul class="gameslist">
    <h2>Games today</h2>
    <% games.forEach(function (obj) { %>
    <li>
      <a href="/games/<%= obj.id %>">
        <div class="team1">
          <h4><span><%= obj.team_1_score %></span></h4>
          <h3><%= obj.team_1.short_name %></h3>
        </div>

        <div class="info">
          <p> <b><%= new Date(obj.start_time).toString().substr(15,6) %></b></p> <!-- TODO -> substr() needs testing! -->
          <p><%= obj.game_site.name %></p>
        </div>

        <div class="team2">
          <h4><span><%= obj.team_2_score %></span></h4>
          <h3><%= obj.team_2.short_name %></h3>
        </div>
      </a>
    </li>
    <% }) %>
  </ul>
</section>

